# Choose LLM provider: "openai" or "gemini"
LLM_PROVIDER="gemini"

# Google Gemini Configuration
GEMINI_LLM_MODEL="gemini-2.5-flash"
GOOGLE_API_KEY="your-google-api-key-here"

# OpenAI Configuration (alternative)
OPENAI_LLM_MODEL="gpt-4o-mini"
